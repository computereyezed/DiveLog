<div class="top-row pl-4 navbar navbar-dark">
    <img src="css/Images/scuba_diver.png" asp-append-version="true" width="50" />
    <a class="navbar-brand" href=""><h3>DiveLog</h3></a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>
<AuthorizeView>
    <Authorized>
        <div class="scrollable-area-index">
            <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
                <br />
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <a href="Identity/Account/Manage" class="text-wrap  text-white long-email-address-css">@context.User.Identity.Name</a>
                    </div>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item text px-2">
                        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                            <span class="oi oi-home" aria-hidden="true"></span> Home
                        </NavLink>
                    </li>
                    <li class="nav-item px-2">
                        <NavLink class="nav-link" href="logs">
                            <span class="oi oi-book" aria-hidden="true"></span> Log Book
                        </NavLink>
                    </li>
                    <li class="nav-item px-2">
                        <NavLink class="nav-link" href="planning">
                            <span class="oi oi-plus" aria-hidden="true"></span> Planning
                        </NavLink>
                    </li>
                    <li class="nav-item px-2">
                        <NavLink class="nav-link" href="images">
                            <span class="oi oi-image" aria-hidden="true"></span> Images
                        </NavLink>
                    </li>
                    <li class="nav-item px-2">
                        <NavLink class="nav-link" href="fetchdata">
                            <span class="oi oi-list" aria-hidden="true"></span> Dive Charts
                        </NavLink>
                    </li>
                </ul>
                <br />
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <form method="post" action="Identity/Account/LogOut">
                            <button type="submit" class="btn btn-primary"> Logout</button>
                        </form>
                    </div>
                </div>
            </div>
            <br />
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
            <ul class="nav flex-column">
                <li class="nav-item px-2">
                    <NavLink class="nav-link" href="Identity/Account/Login">
                        <span class="oi oi-account-login" aria-hidden="true"></span> Log in
                    </NavLink>
                </li>
            </ul>
            <ul class="nav flex-column">
                <li class="nav-item px-2">
                    <NavLink class="nav-link" href="Identity/Account/Register">
                        <span class="oi oi-person" aria-hidden="true"></span> Register
                    </NavLink>
                </li>
            </ul>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
